            <nav>
                <a href="/vote">Votar</a>
                <a href="/consulta">Consulta</a>
            </nav>
        </div>
    </header>
    <main>
        {{if .Content}}
            {{.Content}}
        {{else}}
            <p class="muted">Ops! Nenhum conteÃºdo disponÃ­vel.</p>
        {{end}}
    </main>
    <footer>
        <p>Built with Go @1000req/s â€” High performance, zero drama ðŸš€</p>
    </footer>
</body>
</html>
{{end}}
